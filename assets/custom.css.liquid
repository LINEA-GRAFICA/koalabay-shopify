}

:root {
  --offset: 20vw;
  --move-initial: calc(-25% + var(--offset));
  --move-final: calc(-50% + var(--offset));
}

.announcement-bar__middle{
  width: 100%;
}

.announcement-bar__announcements {
  transition: all 2.6s;
  overflow: hidden;
}

.announcement-bar__announcements.running .announcement {
  animation-play-state: running;
}
.announcement-bar__announcements:hover .announcement {
  animation-play-state: running;
}

.announcement-bar__announcements p {
  padding: 0 2vw;
  white-space: nowrap;
}

.announcement {
  width: fit-content;
  display: flex;
  position: relative;
  transform: translate3d(var(--move-initial), 0, 0);
  animation: announcement-bar__announcements 20s linear infinite !important;
  animation-play-state: paused;
}

.announcement__text{
  width: fit-content;
  display: flex;
}

@keyframes announcement-bar__announcements {
  0% {
    transform: translateX(var(--move-initial));
  }
  100% {
    transform: translateX(var(--move-final));
  }
}

